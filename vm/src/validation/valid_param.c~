#include "vm.h"

int	is_dump(int i, int ac, char **av)
{
	if (ft_strcmp(av[i], "-dump") == 0)
	{
		if (((i + 1 >= ac) || !ft_isint(av[i + 1])) || ft_atoi(av[i + 1]) <= 0)
			return (1 + ft_puterr("ERROR:Improper -dump input", 0));
	}
	return (1);
}

#include "vm.h"

static int	print_usage(void)
{
	char *str;

	str = ft_itoa(CHAMP_MAX_SIZE);
	ft_putstr_fd(E0M, 2);
	ft_puterr(BOLD"USAGE"E0M": ./corewar [-dump nbr_cycles] \
[[-n number] champion.cor] ...\n", 0);
	ft_puterr(BOLD"-dump"E0M" nbr_cycles:\t After nbr_cycles \
dump the memory and quit the game", 0);
	ft_puterr("\t\t\t must be dumped in hexadecimal format with 32 octets \
per line.", 0);
	ft_puterr("", 0);
	ft_puterr(BOLD"-n"E0M" number:\t\t The number of the player (positive int)",
				0);
	ft_puterr("\t\t\t if non-existent, the player's number will be generated \
automatically.\n", 0);
	ft_puterr("\t\t\t The last player will have the first process in order of \
execution.\n", 0);
	ft_printf_fd(2, ITALIC"The champions (max: ) cannot go over CHAMP_MAX_\
SIZE (%s), otherwise it is an "BLINK"ERROR\n\n"E0M, str);
	free(str);
	return (EXIT_FAILURE);
}

int			valid_format(int ac, char **av)
{
	int		i;
	int		eparam;
	int		nplayers;

	i = 1;
	if ((eparam = is_dump(i, ac, av)) < 0)
		return (EXIT_FAILURE);
	i += eparam;
	nplayers = 0;
	while (i < ac)
	{
		if (av[i][0] == '-' && ft_strcmp(av[i], "-n") != 0)
			return (EXIT_FAILURE);
		if ((i = is_champion(i, ac, av)) < 0)
			return (EXIT_FAILURE);
		if (nplayers >= MAX_PLAYERS)
			return (ft_puterr(ERROR": Too many champions", EXIT_FAILURE));
	}
	return (EXIT_SUCCESS);
}

int			valid_input(int ac, char **av)
{
	ft_putstr_fd(RED, 2);
	if (ac < 2 || valid_format(ac, av) == EXIT_FAILURE)
		return (print_usage());
	return (EXIT_SUCCESS);
}

#include "vm.h"

int		load_champions(t_vm *vm)
{
	t_player *champion;
	int space;
	int ad;

	space = MEM_SIZE / vm->nplayers;
	champion = vm->player;
	ad = 0;
	//modulo?
	while (champion)
	{
		ft_memcpy(&(vm->ram.arena[ad]), champion->code, champion->prog_size);
		ft_memset(&(vm->ram.owner[ad]), champion->nplayer, champion->prog_size);
		champion->pc_address = ad;
		ad += space;
		champion = champion->next;
	}
	//vm->last_live_id = vm->nplayers - 1;
	return (EXIT_SUCCESS);
}
